{
  "extends": ["cozy-app/react"],
  "rules": {
    "no-console": 1,
    "no-param-reassign": "error",
    "react-hooks/exhaustive-deps": "error"
  },
  "globals": {
    "fixture": false
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "overrides": [
    {
      "files": ["*.spec.js[x]"],
      "rules": {
        "react/display-name": "off"
      }
    }
  ],
  "parserOptions": {
    "project": "tsconfig.json"
  }
}
