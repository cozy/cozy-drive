@require 'cozy-ui'

:global
    label[for='pho-album-share-toggle']
        cursor pointer

:local
    .pho-share-modal-content
        @extend $form
        @extend $form-text
        @extend $form-button
        @extend $form-select
        padding 0 1.5rem 1.5rem

    .pho-share-modal-tabs
        padding 0 .5rem

    .pho-share-modal-footer
        padding 0
        background-color paleGrey
        color            charcoalGrey
        font-weight      bold

        p
            margin 0
            padding 1rem 1.5rem

    .coz-form-group
        margin 0

        h3
          margin .3rem 0 0

        .coz-form
            margin 0

        .coz-form-desc
          color coolGrey

        .coz-select
            flex 0 0 49%
            height 2.5rem
            padding-bottom .4375rem

    input[type=text]
        width 100%

    .pho-input-dual
        display flex
        align-items center

        input[type=text]
            width 100%
            height 3rem

        > :first-child
            flex 2 0 1%
            padding-right .5rem

        > :last-child
            flex 0 0 6rem
            text-align right

        .coz-form-desc
            margin 0

        +tiny-screen()
            > :last-child
                flex-basis auto

    .pho-btn-copy
        width 100%
        height 3rem
        margin 0

    .pho-share-details-created
    .pho-share-details-perm
        font-size            1rem
        margin               0.5rem 0 0.5rem 3rem
        padding-left         1.5rem
        background-position  0 center
        background-repeat    no-repeat

    .pho-share-details-created
        background-image     embedurl('./assets/icon-clock-16.svg')

    .pho-share-details-perm
        background-image     embedurl('./assets/icon-pen-16.svg')
