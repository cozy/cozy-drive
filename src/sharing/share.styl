@require 'cozy-ui'

.c-btn
    @extend $button

.c-btn--secondary
    @extend $button--secondary

:global
    label[for='pho-album-share-toggle']
        cursor pointer

:local
    .pho-share-modal-content
        @extend $form
        @extend $form-text
        @extend $form-button
        @extend $form-select
        padding 0 1.5em 1.5em

    .pho-share-modal-tabs
        padding 0 .5em

    .pho-share-modal-footer
        padding 0
        background-color pale-grey
        color            charcoal-grey
        font-weight      bold

        p
            margin 0
            padding 1em 1.5em

    .coz-form-group
        margin 0

        h3
          margin .3em 0 0

        .coz-form
            margin 0

        .coz-form-desc
          color cool-grey

        .coz-select
            flex 0 0 49%
            height em(40px)
            padding-bottom em(7px)

    input[type=text]
        width 100%



    .pho-input-dual
        display flex
        align-items center

        input[type=text]
            width 100%
            height em(48px)

        > :first-child
            flex 2 0 1%
            padding-right .5em

        > :last-child
            flex 0 0 6em
            text-align right

        .coz-form-desc
            margin 0

        @media (max-width 32em)
            > :last-child
                flex-basis auto

    .pho-btn-copy
        width 100%
        height em(48px, 14px)
        margin 0

    .pho-share-details-created
    .pho-share-details-perm
        font-size            1em
        margin               0.5em 0 0.5em 3em
        padding-left         em(24px)
        background-position  0 center
        background-repeat    no-repeat

    .pho-share-details-created
        background-image     embedurl('./assets/icon-clock-16.svg')

    .pho-share-details-perm
        background-image     embedurl('./assets/icon-pen-16.svg')
