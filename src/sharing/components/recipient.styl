@require 'components/button.styl'
@require 'settings/breakpoints.styl'
@require 'settings/palette.styl'

.recipient
    display flex
    flex-direction row
    align-items center

    +small-screen()
        align-items flex-start

.recipients-list-light
    .recipient
        margin 1rem 0

    & + .recipient
        margin-top 1rem

.recipient-avatar
    position relative
    flex 0 0 auto
    border-radius 50%
    background-color var(--silver)
    width 2.5rem
    height 2.5rem
    font-size 1.1rem

    span
        position absolute
        top 50%
        left 50%
        transform translateX(-50%) translateY(-50%)
        font-weight bold
        line-height 1rem
        text-transform uppercase
        color var(--white)

    &--small
        width 2rem
        height 2rem
        font-size 1rem

    .recipient-avatar-link
        background embedurl("../assets/icons/icon-link-16.svg") center center no-repeat
        height 1rem
        width  1rem

    .recipient-avatar-plusx
      color var(--charcoalGrey)

.recipient-idents
    flex 1 1 auto
    overflow hidden
    text-overflow ellipsis

.recipient-status
    flex 0 0 auto
    font-size .875rem
    color var(--coolGrey)

.recipient-ident-status
    flex 1 1 auto
    display flex
    flex-direction row
    align-items center
    max-width calc(100% - 3rem)

.recipient-user
.recipient-details
    text-overflow ellipsis
    overflow hidden
    white-space nowrap
    line-height 1.3

.recipient-user
    font-size 1rem
    font-weight bold

.recipient-details
    font-size .875rem
    color var(--coolGrey)

.avatar
    display flex
    flex-direction row
    align-items center


    .recipient-user
        font-size 1.125rem

.recipients-avatars
    display inline-flex
    flex-direction row-reverse
    margin-right 0.5rem

    &.--interactive
        cursor pointer

    .recipient-avatar
        margin-right -0.6rem
        border 2px solid var(--white)
        box-sizing border-box

.recipient-status .recipient-owner
    padding .2rem 0

.recipient-status .recipient-menu-btn
    @extend $button
    text-transform capitalize
    background transparent embedurl("../assets/icons/icon-arrow-down.svg") right center  no-repeat
    border     none
    min-width  1rem
    padding-right 1.1rem
    color    var(--black)


// bit of a hack because the menu is inside a scrollable area
.recipient-menu > div
  margin-bottom .5rem

.action-unshare
    color var(--pomegranate) !important
    text-decoration none !important

.action-unshare-desc
    color var(--coolGrey)
    margin    0
    padding   .5rem 0
    font-size .8125rem

+small-screen()
    .recipient-ident-status
        display block

    .recipient-status  .recipient-menu-btn
        padding-left 0
        padding-right 1.1rem
        margin 0
        min-height 0
