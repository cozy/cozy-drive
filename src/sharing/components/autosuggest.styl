@require 'cozy-ui'

.container
    position relative

.suggestionsContainer
    position absolute
    top 100%
    margin-top 1px
    z-index $alert-index-mobile
    width 100%
    max-height em(170px)
    overflow auto
    border 1px solid silver
    border-radius 4px
    background white
    display none

.suggestionsContainerOpen
    display block

.input
    width 100%

.suggestionsList
    margin 0
    padding 10px 0
    list-style none

.suggestion
    padding 10px

.suggestionHighlighted
    background paleGrey

.recipientsContainer
    display        flex
    flex-wrap      wrap
    padding        em(8px)
    border-radius  2px
    border         1px solid silver

    &:hover
        border 1px solid coolGrey

    &:last-child
        flex-grow 1
        min-width 33%

    input[type=email]
        width   100%
        padding 0.5em
        border  none
        &:hover
        &:focus
            border none

.recipientChip
    background-color silver
    border-radius em(32px)
    height        em(32px)
    line-height   em(32px)
    padding       0 em(16px)
    margin        0 em(8px) em(8px) 0

.removeRecipient
    display          inline-block
    height           em(20px)
    width            em(20px)
    line-height      em(16px)
    margin           0 -8px 0 8px
    background-color coolGrey
    border           none
    border-radius    50%
    &:after
        color   silver
        content 'x'
