@require 'cozy-ui'

.container
    position relative

.suggestionsContainer
    position absolute
    top 100%
    margin-top .0625rem
    z-index $alert-index-mobile
    width 100%
    max-height 10.625rem
    overflow auto
    border .0625rem solid silver
    border-radius .25rem
    background white
    display none

.suggestionsContainerOpen
    display block

.input
    width 100%

.suggestionsList
    margin 0
    padding .625rem 0
    list-style none

.suggestion
    padding .625rem

.suggestionHighlighted
    background paleGrey

.recipientsContainer
    display        flex
    flex-wrap      wrap
    padding        .5rem
    border-radius  .125rem
    border         .0625rem solid silver

    &:hover
        border .0625rem solid coolGrey

    &:last-child
        flex-grow 1
        min-width 33%

    input[type=email]
        width   100%
        padding .5rem
        border  none
        &:hover
        &:focus
            border none

.recipientChip
    background-color silver
    border-radius 2rem
    height        2rem
    line-height   2rem
    padding       0 1rem
    margin        0 .5rem .5rem 0

.removeRecipient
    display          inline-block
    height           1.25rem
    width            1.25rem
    line-height      1rem
    margin           0 -.5rem 0 .5rem
    background-color coolGrey
    border           none
    border-radius    50%
    &:after
        color   silver
        content 'x'
