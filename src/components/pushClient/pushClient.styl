@require 'cozy-ui'

.c-btn
    @extend $button

.c-btn--close
    @extend $button--close

// Desktop Button
.coz-btn-client
    @extend $button-client
    margin 1rem

    +medium-screen()
        display none

// Banner
.coz-banner-client
    position relative

    +small-screen('min')
        margin-top     -1.875rem
        margin-bottom  1.875rem

    .coz-btn-clientMobile
        @extend $button-client-mobile
        margin  0

        +medium-screen('min')
            display none

    .coz-banner-text
        @extend $button-client-mobile
        margin 0
        cursor default

        +medium-screen()
            display none

        span
            padding-right 2rem

    .c-btn--close
        position   absolute
        right      0
        top        50%
        transform  translateY(-50%)
        margin     0
        filter     brightness(0) invert(1)
