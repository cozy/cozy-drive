@require 'settings/palette.styl'
@require 'settings/z-index.styl'
@require 'components/popover.styl'

.coz-menu
    position relative
    display  inline-block

.coz-menu-inner
    display    block
    position   absolute
    @extend    $popover
    right      0
    padding    .3125rem 0
    margin     0
    margin-top .0625rem
    min-width  13.75rem
    z-index $file-action-menu


.coz-menu-item:hover
.coz-menu-item:focus
    background-color paleGrey
    outline          none

.cozy-menu-overlay
  opacity 0
  -webkit-tap-highlight-color rgba(0,0,0,0)
