@require 'cozy-ui'

.coz-menu
    position relative
    display  inline-block

.coz-menu-inner
    display    none
    position   absolute
    @extend    $popover
    right      0
    padding    .3125rem 0
    margin     0
    margin-top .0625rem
    min-width  13.75rem

.coz-menu-inner--opened
    display block

.coz-menu-item:hover
.coz-menu-item:focus
    background-color paleGrey
    outline          none
