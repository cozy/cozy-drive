@require 'cozy-ui'

$empty
    display          flex
    flex-direction   column
    justify-content  center
    flex             1 0 auto
    align-self       center
    align-items      center
    padding          1rem 0
    text-align       center

    &:before
        content     ''
        display     block
        margin      0 auto
        width       10rem
        height      8.75rem
    h2
        font-size(24px)
        margin         2rem auto 0
        line-height    1.3
        color          charcoal-grey
        letter-spacing -0.2px
    p
        margin-top  .3rem
        color       cool-grey
        line-height 1.5

    [role=button]
        margin-top 1rem

    +medium-screen()
        &:before
            width  7.5rem
            height 6.5625rem
        h2
            margin 2rem 1.5em 0
        p
            margin .3rem 1.5em 0

.c-empty-drive
    @extend $empty
    &:before
        background  embedurl('../../drive/assets/icons/icon-type-folder.svg') center center / cover no-repeat

.c-trash-empty
    @extend $empty
    &:before
        background  embedurl('../../drive/assets/icons/icon-trash-big.svg') center center / cover no-repeat
        height      10rem

        @media (max-width: (1023/basefont)rem)
            height 5rem
.pho-error
    @extend $empty
    &:before
        background  embedurl('../../photos/assets/icons/icon-image-broken.svg') center center / cover no-repeat

.c-empty-photos
    @extend $empty
    &:before
        background  embedurl('../../photos/assets/icons/icon-main-app.svg') center center / cover no-repeat

.pho-errorShare
.fil-errorShare
    @extend $empty
    &:before
        background  embedurl('../../photos/assets/icons/icon-cloud-wrong.svg') center center / contain no-repeat
