@require 'cozy-ui'

.feedback-form
    @extend $form

    .coz-form
        margin-top 0

.feedback-text
    box-sizing border-box
    width 100%
    min-height 200px
    border 1px solid silver
    padding 1em
    margin-bottom 1em

.button-block
    text-align right

.c-btn--paperplane
    background-image embedurl('../assets/icons/icon-paperplane-white.svg')
    background-position .5rem center
    background-repeat no-repeat
    padding-left 2rem
