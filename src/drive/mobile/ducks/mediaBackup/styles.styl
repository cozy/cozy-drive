@require 'settings/palette.styl'
@require '../../styles/feedback'

.coz-upload-status-wrapper
    position relative

.coz-upload-status
    display flex
    align-items center
    box-sizing border-box
    border-bottom .0625rem solid silver
    min-height 2.5rem
    padding .5rem 1rem
    background-color paleGrey
    transition bottom 0.5s ease-out, top 0.5s ease-out, opacity 0.2s ease-out

.coz-upload-progress
    position absolute
    top 0
    left 0
    -webkit-appearance none
    -moz-appearance    none
    border     none
    display    block
    width      100%
    height     .125rem
    margin     0
    background lightgray

.coz-upload-progress::-webkit-progress-bar
    background-color silver
.coz-upload-progress::-webkit-progress-value
    background-color dodgerBlue
.coz-upload-progress::-moz-progress-bar
    background-color dodgerBlue

.infinite-progress
  width 100%
  height .125rem
  background lightgray
  position relative
  overflow hidden
  margin-top .5rem

  &:before
    content ""
    display block
    height 100%
    width 0
    position absolute
    top 0
    left 0
    background dodgerBlue
    animation squashstretch 1s linear infinite alternate

@keyframes squashstretch
  0%
    width 10%
  50%
    width 80%
    left 10%
  100%
    width 10%
    left 90%

.coz-progress-pic
    position relative
    margin 0 .5rem 0 -.5rem
    width 3rem
    height 3rem
    overflow hidden
    border-radius 0.25rem
    background paleGrey embedurl('../../../assets/icons/icon-type-image.svg') center center / 5rem 4rem no-repeat

    img
        position absolute
        top 50%
        left 50%
        transform translateX(-50%) translateY(-50%)
        width 3rem
        height 3rem
        object-fit cover
        object-position center

.coz-upload-status-content
    flex auto
    font-size .75rem
    text-transform uppercase
    color charcoalGrey
    font-weight bold

.coz-upload-status-link
    display block
    margin auto
    color dodgerBlue
    padding .5rem
    padding-left 1.6rem
    margin-top .3rem
    text-transform uppercase
    border 0
    background embedurl('../../assets/icons/icon-paperplane-blue.svg') .2rem center no-repeat

.coz-upload-status--success
    padding-left 3.8125rem
    background paleGrey embedurl('../../assets/icons/icon-upload-OK.svg') 1rem center no-repeat

.coz-upload-status--waiting
    padding-left 3.8125rem
    background paleGrey embedurl('../../assets/icons/icon-upload-waiting.svg') 1rem center no-repeat

.coz-upload-status--error
    padding-left 3.8125rem
    background paleGrey embedurl('../../assets/icons/icon-upload-error.svg') 1rem center no-repeat
