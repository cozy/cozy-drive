@require 'cozy-ui'
@require '../../styles/feedback'

.coz-upload-status
    display flex
    align-items center
    box-sizing border-box
    border-bottom 1px solid silver
    min-height 2.5rem
    padding .5rem 1rem
    transition bottom 0.5s ease-out, top 0.5s ease-out, opacity 0.2s ease-out

.coz-progress
    position absolute
    background-color dodger-blue
    border-radius 0 1px 1px 0
    max-width 100%
    height 2px
    top 0
    left 0
    display inline-block
    transition 0.4s width, 0.4s background-color

.coz-progress-pic
    position relative
    margin 0 .5rem 0 -.5rem
    width 3rem
    height 3rem
    overflow hidden
    border-radius 0.25rem
    background pale-grey embedurl('../../../assets/icons/icon-type-image.svg') center center / 5rem 4rem no-repeat

    img
        position absolute
        top 50%
        left 50%
        transform translateX(-50%) translateY(-50%)
        width 3rem
        height 3rem
        object-fit cover
        object-position center

.coz-upload-status-content
    flex auto
    font-size .75em
    text-transform uppercase
    color charcoal-grey
    font-weight bold

.coz-upload-status-link
    display block
    margin auto
    color dodger-blue
    padding .5rem
    padding-left 1.6rem
    margin-top .3rem
    text-transform uppercase
    border 0
    background embedurl('../../assets/icons/icon-paperplane-blue.svg') .2rem center no-repeat

.coz-upload-status--success
    padding-left 3.8125rem
    background embedurl('../../assets/icons/icon-upload-OK.svg') 1rem center no-repeat

.coz-upload-status--waiting
    padding-left em(61px)
    background embedurl('../../assets/icons/icon-upload-waiting.svg') 1rem center no-repeat

.coz-upload-status--error
    padding-left em(61px)
    background embedurl('../../assets/icons/icon-upload-error.svg') 1rem center no-repeat
