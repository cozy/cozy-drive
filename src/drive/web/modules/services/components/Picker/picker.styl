@require 'settings/breakpoints.styl'
@require 'settings/z-index.styl'
@require 'settings/palette.styl'

.wrapper
  display flex
  flex-direction column
  max-height 100%
  height 100%

.button-area
  text-align right
  padding 1rem

.toolbar
    margin-left auto
    display     flex
    height 3rem

.origin-info
  margin 1rem 2rem
  background var(--paleGrey)
  border 1px solid var(--silver)
  padding 1rem
  border-radius .3rem
  display: flex;
  flex-direction: row;
  justify-content: flex-flex-start;
  align-items: center;

.origin-info-text
  h2
    margin-top 0
    margin-bottom .4rem
    font-size: 1rem

  p
    margin 0
    font-size: .9rem

.origin-info-icon
  max-width: 2rem;
  max-height: 2rem;
  margin-right: 1rem;


+small-screen()
  .wrapper .breadcrumb
    top 3rem

:global
  #main
    height 100%
