@require 'settings/z-index.styl'
@require 'settings/palette.styl'

.fil-dropzone-active
    [role='table']
        background-color zircon

.fil-dropzone-teaser
    position  absolute
    z-index   $overlay-index
    left      50%
    transform translateX(-50%)
    bottom    2rem
    display   flex
    flex-direction column
    align-items    center

@keyframes pulse
  from
    transform scale3d(1, 1, 1)
  50%
    transform scale3d(1.25, 1.25, 1.25)
  to
    transform scale3d(1, 1, 1)

.fil-dropzone-teaser-claudy
    width  3.5em
    height 3.5em
    margin-bottom 1rem
    border-radius 100%
    border none
    box-shadow 0 1px 3px 0 rgba(50, 54, 63, 0.19), 0 6px 18px 0 rgba(50, 54, 63, 0.39)
    animation-name pulse
    animation-duration 2s
    animation-iteration-count infinite
    cursor pointer
    outline 0
    display: flex;
    align-items: center;
    justify-content: center;
    background-color dodgerBlue
    
.fil-dropzone-teaser-content
    background-color dodgerBlue
    border-radius 2px
    text-align center
    color white
    padding 1rem
    box-shadow 0 1px 3px 0 rgba(50, 54, 63, 0.19), 0 6px 18px 0 rgba(50, 54, 63, 0.39)

    & > p
        margin-top 0

    .fil-dropzone-teaser-folder
        font-weight bold