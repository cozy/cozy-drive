@require 'settings/breakpoints.styl'

// This ugly rules hide the default close button of the modal
.intentButton
    [class*='coz-btn-modal-close']
        top .25rem
        right .25rem
    .coz-modal-intent
        max-width none

.intentViewer
    iframe
        border 0
        border-radius .5rem
        width 100%
        height 100%

        +small-screen('min')
            width 80vw
            height 80vh
