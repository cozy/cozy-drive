@require 'cozy-ui'

// This ugly rules hide the default close button of the modal
.intentButton
    [class*="coz-btn-modal-close"]
        top: 4px
        right: 4px
    .coz-modal-intent
        max-width: none

.intentViewer
    iframe
        border: none
        height: 400px
        border-radius: 0.5em
        width 100%
        height 100%

        +small-screen('min')
            width 80vw
            height 80vh
