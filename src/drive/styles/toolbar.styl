@require 'components/button.styl'
@require 'settings/breakpoints.styl'
@require 'settings/z-index.styl'
@require 'utilities/display.styl'
@require 'settings/palette.styl'

.c-btn
    @extend $button

.c-btn--regular
    @extend $button--regular

.c-btn--secondary
    @extend $button--secondary

.c-btn--danger
    @extend $button--danger

.c-btn--danger-outline
    @extend $button--danger-outline


.toolbar-inside-bar
  display flex
  justify-content flex-end
  align-items center

.fil-toolbar-files
.fil-toolbar-trash
    margin-left auto
    display     flex
    
.menu-recipients-wrapper
    position relative
  
.menu-recipients
    position absolute
    right    0
    top      -.5rem

+medium-screen()
    .fil-toolbar-menu
        display block
        left 1em

