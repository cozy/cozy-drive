@require 'components/popover.styl'
@require 'settings/z-index.styl'

.fil-actionmenu-backdrop
    position   fixed
    z-index    $overlay-index
    top        0
    right      0
    bottom     0
    left       0
    display    block
    background rgba(50, 54, 63, 0.5)

.fil-actionmenu
    @extend        $popover
    z-index        $file-action-menu
    position       fixed
    bottom         .5625rem
    width          "calc(100% - %s)" % 1rem
    margin         0 .5rem
    padding-bottom .3125rem

    &.with-transition
        transition transform .1s ease-out

    hr
        margin-top 0

.fil-actionmenu-header
    padding     1.25rem 1.5rem 1.25rem 1.25rem
    font-size   1rem
    font-weight bold

.fil-actionmenu-file
    margin-left   1.1875rem
    padding-left  2.8125rem
    background-position 0 center
    background-repeat no-repeat

.fil-action-availableOffline
    position relative
    background embedurl('../assets/icons/icon-phone-download.svg') 1rem center no-repeat

    [class^='toggle']
        position absolute
        top 50%
        transform translateY(-50%)
        margin-left 1rem
.fil-action-openWith
    background embedurl("../assets/icons/icon-link-out-16.svg") 1rem center no-repeat
.fil-action-download
    background embedurl("../assets/icons/icon-download-16.svg") 1rem center no-repeat
.fil-action-destroy
.fil-action-trash
    background embedurl("../assets/icons/icon-delete-16.svg") 1rem center no-repeat
.fil-action-restore
    background embedurl("../assets/icons/icon-restore.svg") 1rem center no-repeat
.fil-action-rename
    background embedurl("../assets/icons/icon-rename.svg") 1rem center no-repeat
.fil-action-share
    background embedurl("../assets/icons/icon-share-grey.svg") 1rem center no-repeat
