@require 'settings/palette.styl'
@require 'settings/z-index.styl'
@require 'components/popover.styl'

.fil-actionmenu-inner
    @extend    $popover
    z-index    $file-action-menu
    position   absolute
    margin     0
    margin-top rem(1)
    min-width  rem(220)
    overflow   hidden
    border     0
    color      charcoalGrey

    .fil-actionmenu-recipients
        display none

.fil-actionmenu-inner
    .fil-action:hover
        background-color paleGrey
    .fil-action:active
        background-color silver

.fil-actionmenu-overlay
  opacity 0
  -webkit-tap-highlight-color rgba(0,0,0,0)

.fil-mobileactionmenu
    hr
        margin-top 0

.fil-mobileactionmenu-header
    padding     1.25rem 1.5rem 1.25rem 1.25rem
    font-size   1rem
    font-weight bold
    display     flex

.fil-mobileactionmenu-file
    margin-left   1.1875rem
    padding-left  2.8125rem
    background-position 0 center
    background-repeat no-repeat

.fil-mobileactionmenu-file-name
    overflow hidden
    text-overflow ellipsis
    white-space   nowrap

.fil-mobileactionmenu-file-ext
    color coolGrey

.fil-action-phone-download
    position relative
    background embedurl('../assets/icons/icon-phone-download.svg') 1rem center no-repeat

    [class^='toggle']
        position absolute
        top 50%
        transform translateY(-50%)
        margin-left 1rem
.fil-action-openWith
    background embedurl("../assets/icons/icon-link-out-16.svg") 1rem center no-repeat
.fil-action-download
    background embedurl("../assets/icons/icon-download-16.svg") 1rem center no-repeat
.fil-action-destroy
.fil-action-trash
    background embedurl("../assets/icons/icon-delete-16.svg") 1rem center no-repeat
.fil-action-restore
    background embedurl("../assets/icons/icon-restore.svg") 1rem center no-repeat
.fil-action-rename
    background embedurl("../assets/icons/icon-rename.svg") 1rem center no-repeat
.fil-action-share
    background embedurl("../assets/icons/icon-share-grey.svg") 1rem center no-repeat
    position   relative
    
    .fil-actionmenu-recipients
        position absolute
        right    1rem
        top      .1rem

