<!DOCTYPE html>
<html lang="{{.Locale}}">
  <head>
    <meta charset="utf-8" />
    <title><%= htmlPlugin.options.title %></title>
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/apple-touch-icon.png" />
    <link
      rel="icon"
      type="image/png"
      href="/assets/favicon-32x32.png"
      sizes="32x32"
    />
    <link
      rel="icon"
      type="image/png"
      href="/assets/favicon-16x16.png"
      sizes="16x16"
    />
    <link rel="mask-icon" href="/assets/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="theme-color" content="#ffffff" />
    <meta name="color-scheme" content="light dark" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" type="text/css" href="//{{.Domain}}/assets/fonts/fonts.css">
    {{.CozyFonts}}
    <% htmlPlugin.files.css.forEach(function(file) { %>
      <link rel="stylesheet" href="<%- file %>" />
    <% }); %>
    {{.ThemeCSS}}
  </head>
  <div
    id="main"
    role="application"
    data-cozy="{{.CozyData}}"
  ></div>
  <% htmlPlugin.files.js.forEach(function(file) { %>
    <script defer src="<%- file %>"></script>
  <% }); %>
</html>
