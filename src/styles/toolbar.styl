@require 'cozy-ui'

.pho-toolbar
    display flex
    margin-left auto

    a
        &.pho-action-select
            background embedurl("../assets/icons/icon-checkbox.svg") em(16px) center no-repeat

    .coz-btn--more
        margin-right 0

    .pho-toolbar-btn
        @media (max-width: (480/basefont)rem)
            height 2em
            width  2em

:local
    @extends $menu

    b-menu-button
        width          4em
        display        flex
        flex-direction column
        align-items    flex-end

        b-listbox
            top          em(43px)//3em
            margin-right 0
