.iconContainer
  position: relative
  display: inline-block

.iconContainer svg
  // Keep only the gradient/lightness to combine nicely with overlay
  filter: grayscale(100%) brightness(0.2) contrast(1.1)

.iconOverlay
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  // The color is provided by the React component via CSS variable
  background-color: var(--folder-color, #696C6F)
  mix-blend-mode: screen

  // Mask properties (image URL will be set via inline style from the hook)
  mask-size: contain
  mask-repeat: no-repeat
  mask-position: center

  -webkit-mask-size: contain
  -webkit-mask-repeat: no-repeat
  -webkit-mask-position: center

  pointer-events: none


