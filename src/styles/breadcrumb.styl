@require 'cozy-ui'

.fil-content-title
    margin 0
    font-size(24px)

.fil-inside-path
    color           #95999d
    text-decoration none
    cursor          pointer

    .separator
        horizontally-padded .3em

.fil-content-previous
    display none
    position absolute
    right     100%
    top      0
    width 40px
    height 40px
    border 0
    background white embedurl('../assets/icons/icon-arrow-left.svg') center center no-repeat

.fil-content-down
    display none
    width 14px
    height 10px
    border 0
    margin-left 7px
    background white embedurl('../assets/icons/icon-arrow-down.svg') center center no-repeat

@media (max-width: (768/basefont)rem)
    .fil-content-backdrop
        position fixed
        top      0
        left     40px // bar hamburger button width
        right    0
        z-index  $nav-index

    .fil-content-title
        display flex
        flex-direction column-reverse
        font-size 20px

    .fil-content-title .fil-inside-path
    .fil-content-title .fil-main-path
        height 40px
        padding 7px 0
        box-sizing border-box

    .fil-content-previous
        display block

    .fil-content-down
        display inline-block

    .fil-content-title .fil-inside-path
    .fil-inside-path .separator
        display none

    .fil-content-backdrop.deployed
        bottom     0
        left       0
        background rgba(50, 54, 63, 0.5)

        .fil-content-previous
            left 0

        .fil-content-title
            background white

        .fil-content-title .fil-inside-path
        .fil-content-title .fil-main-path
            padding-left 40px

        .fil-inside-path
            display block
            color #32363f

        .fil-main-path
            box-shadow inset 0 -1px 0 0 #d6d8da
            height 41px

    :global
        [role=banner] .coz-bar-title
            display none

        [role=banner][data-drawer-visible="true"]
            z-index $nav-index + 1
