@require 'cozy-ui'

.coz-menu
    position relative
    display  inline-block

.coz-menu-inner
    display    none
    position   absolute
    @extend    $popover
    right      0
    padding    5px 0
    margin     0
    margin-top 1px
    min-width  220px

.coz-menu-inner--opened
    display block

.coz-menu-item:hover
.coz-menu-item:focus
    background-color grey-10
    outline          none
