@import 'cozy-ui'

.pho-panel
    position          fixed
    top               0
    right             0
    bottom            0
    left              0
    z-index           $alert-index+1
    background-color  white

.pho-panel-form
    @extend $form
    @extend $form-text
    display         flex
    flex-direction  column
    width           100%
    height          100%

.pho-panel-header
.pho-panel-footer
    background-color  grey-10
    flex              0 0 em(50px)

.pho-panel-header
    padding-bottom 1em

    input[type=text]
        width             100%
        max-width         20em
        padding           .5em .3em .35em
        background-color  white
        font-size         1.5em

.pho-panel-footer
    padding .6em 0 0

    .pho-panel-controls
        display          flex
        justify-content  flex-end

.pho-panel-content
    flex 1 1 auto

.pho-panel-wrap
    box-sizing  border-box
    max-width   em(1024px)
    margin      0 auto
    padding     0 em(10px)
