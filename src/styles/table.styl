@import 'cozy-ui'
@import './mimetypes'

.fil-content-table
    position        relative
    display         flex
    flex-direction  column
    flex            1 1 100%
    height          100%
    text-align      left
    color           grey-11

.fil-content-head
    flex 0 0 em(31px, 16px)

.fil-content-body
    flex      1 1 auto
    display   flex
    flex-direction column
    // Because it needs a height to be scrollable. Don't ask.
    height    1px
    overflow  auto

.fil-content-header
.fil-content-cell
    box-sizing  border-box
    padding     em(15px) em(32px)
    font-size   14px

.fil-content-row
    height          50px
    box-sizing      border-box
    display         flex
    flex-direction  row
    align-items     center
    flex            0 0 auto
    width           100%
    max-width       'calc(100vw - %s)' % em(220px)
    border-bottom   1px solid grey-09

    &:hover
        background-color grey-10
    &.fil-content-head:hover
        background-color white

.fil-content-row-selected
    background-color rgba(24, 122, 255, 0.1)
    &:hover
        background-color rgba(24, 122, 255, 0.1)

.fil-content-cell.fil-content-file
    color grey-08

.fil-content-ext
    color grey-11

.fil-content-header
    padding         em(8px, 12px) em(28px, 12px)
    font-size       12px
    text-transform  uppercase

.fil-content-header:first-child
    padding em(8px, 12px)

.fil-content-file-action
    display     none
    text-align  right

.fil-content-file
    flex        0 0 40%
    user-select none
    background-position 0 center
    background-repeat no-repeat

.fil-content-header.fil-content-file
    padding-left 0

.fil-content-cell.fil-content-file
    position       relative
    padding-left   em(45px)
    font-size      16px
    line-height    1.3
    white-space    nowrap
    overflow       hidden
    text-overflow  ellipsis

.fil-content-file-openable
    cursor pointer

.fil-content-date
.fil-content-size
    flex 0 0 15%

.fil-content-status
    flex 0 0 25%

.fil-content-file-select
    basefont = 14px
    flex       0 0 em(32px, basefont)
    opacity    0
    padding    em(15px) em(8px)
    text-align center
    font-size  basefont
    cursor     default

    label
        cursor default

.fil-content-row--selectable
    .fil-content-file-select
        opacity 1

.fil-content-row:hover
    .fil-content-file-select
        opacity 1

.fil-content-file-action
    width   em(24px)
    padding 0 0 0 em(8px)

mime-types('fil-file-', '../assets/icons/')

.fil-file-preview
    content ''
    position absolute
    left 0
    top 50%
    transform translateY(-50%)
    width 32px
    height 32px
    background-size cover
    background-position center center

@keyframes placeHolderShimmer
    0%
        background-position -468px 0
    100%
        background-position 468px 0

.fil-content-file-placeholder
    animation-duration        1s
    animation-fill-mode       forwards
    animation-iteration-count infinite
    animation-name            placeHolderShimmer
    animation-timing-function linear
    border-radius 3px
    background #f6f7f8
    background #eeeeee
    background linear-gradient(to right, #eeeeee 8%, #dddddd 18%, #eeeeee 33%)
    background-size 800px 104px
    height   em(20px)
    width    67%
    position relative

@media (max-width: (1024/basefont)rem)
    .fil-content-table-selection
        .fil-content-body
            margin-bottom em(48px)

    .fil-content-row
        max-width  100vw

@media (max-width: (768/basefont)rem)
    .fil-content-head
    .fil-content-date
    .fil-content-size
    .fil-content-status
        display none

    .fil-content-body
        max-height  100%

    .fil-content-file
        flex 1 1 auto

    .fil-content-file-action
        display    block
        flex       0 0 em(60px, 14px)

    .fil-content-cell.fil-content-file
        left-padded(61px)
        background-position em(16px) center

    .fil-content-cell.fil-content-file-select
        display none
        padding em(15px) 0 em(15px) em(15px)

    .fil-content-row--selectable
        .fil-content-file-select
            display  block
            flex     0 0 5%

        .fil-content-file
            flex 0 0 90%

        .fil-content-file-action
            display none

    .fil-file-preview
        left em(16px)
