@require 'cozy-ui'

.fil-content-header
    display     flex
    align-items center
    bottom-spaced(10px)
    right-spaced(32px)
    left-spaced(32px)

    @media (max-width: (768/basefont)rem)
        position absolute
        top      0
        left     40px // bar hamburger button width
        right    0
        z-index  100
        margin   0

:global
    @media (max-width: (768/basefont)rem)
        [role=banner] .coz-bar-title
            display none
