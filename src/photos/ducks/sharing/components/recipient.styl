@import 'cozy-ui'

.pho-recipient
    display flex
    flex-direction row
    align-items center

    & + .pho-recipient
        margin-top 1.5em

.pho-recipient-avatar
    position relative
    flex 0 0 auto
    border-radius 50%
    margin-right .5rem
    width 2.5em
    height 2.5em

    span
        position absolute
        top 50%
        left 50%
        transform translateX(-50%) translateY(-50%)
        font-size(18px)
        font-weight bold
        line-height 1em
        text-transform uppercase
        color white

.pho-recipient-idents
    flex 1 1 auto

.pho-recipient-status
    flex 0 0 auto
    font-size em(14px)
    color cool-grey

.pho-recipient-user
.pho-recipient-url
    text-overflow ellipsis
    overflow hidden
    white-space nowrap
    line-height 1.3

.pho-recipient-user
    font-size em(16px)
    font-weight bold

.pho-recipient-url
    font-size em(14px)
    color cool-grey
