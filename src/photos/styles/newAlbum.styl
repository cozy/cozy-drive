@require 'cozy-ui'

.c-btn
    @extend $button

.c-btn--regular
    @extend $button--regular

.c-btn--secondary
    @extend $button--secondary

.pho-panel
    position          fixed
    top               0
    right             0
    bottom            0
    left              0
    z-index           $modal-index
    background-color  white

.pho-panel-form
    @extend $form
    @extend $form-text
    display         flex
    flex-direction  column
    width           100%
    height          100%

.pho-panel-header
.pho-panel-footer
    background-color  paleGrey
    flex              0 0 3.125rem

.pho-panel-header
    padding-bottom 1rem

    input[type=text]
        width             100%
        max-width         20rem
        padding           .5rem .3rem .35rem
        background-color  white
        font-size         1.5rem

    h3
        font-size 1.5rem
        margin    1rem 0 0.5rem

.pho-panel-footer
    padding .6rem 0 0

    .pho-panel-controls
        display          flex
        justify-content  flex-end

.pho-panel-content
    flex 1 1 auto
    overflow auto
    overflow-x hidden
    width 100%

    .pho-panel-wrap
        max-width   68rem
        padding 0

.pho-panel-wrap
    max-width   64rem
    margin      0 auto
    padding     0 2rem
