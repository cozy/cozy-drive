@require 'cozy-ui'


.pho-viewer-wrapper
    position        fixed
    left            0
    right           0
    top             0
    bottom          0
    z-index         $modal-index
    display         flex
    flex-direction  column
    background      grey-08
    width           100%
    height          100%
    overflow        hidden
    color           white

.pho-viewer-nav-previous, .pho-viewer-nav-next
    position             fixed
    z-index              $modal-index + 1
    top                  em(90px)
    bottom               0
    width                em(75px)
    background-position  center
    background-repeat    no-repeat
    cursor               pointer
    background-color     alpha(grey-08, .33)
    transition           .4s opacity ease-out

    &:hover,
    &:focus
        background-color alpha(black, .5)

    &--hidden
        opacity 0
        pointer-events none

.pho-viewer-nav-next
    background-image  embedurl('../assets/icons/icon-arrow-right.svg')
    right             0

.pho-viewer-nav-previous
    background-image  embedurl('../assets/icons/icon-arrow-left.svg')
    left              0

.pho-viewer-photo
    position         relative
    display          flex
    flex             1 1 auto
    max-height       100%
    max-width        100%
    justify-content  center
    align-items      center

    img
        position    absolute
        display     block
        max-width   100%
        max-height  100%
        box-shadow  0 6px 24px 0 rgba(0, 0, 0, 0.5)


@media (max-width: (1023/basefont)rem)
    .pho-viewer-nav-previous, .pho-viewer-nav-next
        display none

    .pho-viewer-photo img
        box-shadow none
