@require 'settings/breakpoints.styl'
@require 'components/button.styl'
@require 'utilities/display.styl'

.c-btn
    @extend $button

.c-btn--regular
    @extend $button--regular

.c-btn--secondary
    @extend $button--secondary

.c-btn--danger
    @extend $button--danger

.c-btn--danger-outline
    @extend $button--danger-outline

.u-hide--mob
    @extend $hide--mob

.u-hide--desk
    @extend $hide--desk

.u-hide--tablet
    @extend $hide--tablet

.pho-toolbar
    display flex
    margin-left auto

    a

        &.pho-action-newalbum
            background embedurl("../assets/icons/icon-album-add.svg") 1rem center no-repeat
        &.pho-action-select
            background embedurl("../assets/icons/icon-checkbox.svg") 1rem center no-repeat
        &.pho-action-rename
            background embedurl("../assets/icons/icon-pen.svg") 1rem center no-repeat
        &.pho-action-addphotos
            background embedurl("../assets/icons/icon-album-add.svg") 1rem center no-repeat
        &.pho-action-share
            background embedurl("../assets/icons/icon-share.svg") 1rem center no-repeat
        &.pho-action-download
            background embedurl("../assets/icons/icon-download-16.svg") 1rem center no-repeat
        &.pho-action-delete
            color pomegranate
            background embedurl("../assets/icons/icon-trash-red.svg") 1rem center no-repeat

    .pho-btn-new
        @extend $button
        @extend $button--secondary

    +medium-screen()
        .pho-action-upload
            display inline-flex
            padding-left 1rem

            svg
                margin-right .5rem
