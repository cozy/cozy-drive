@require 'settings/breakpoints.styl'
@require 'settings/palette.styl'
@require 'components/button.styl'
@require 'utilities/display.styl'

.c-btn
    @extend $button

.c-btn--regular
    @extend $button--regular

.c-btn--secondary
    @extend $button--secondary

.c-btn--danger
    @extend $button--danger

.c-btn--danger-outline
    @extend $button--danger-outline

.pho-toolbar
    display flex
    margin-left auto

    .pho-action-delete
        color var(--pomegranate)

.pho-action-upload
    span[role=button]
        display inline-flex
        padding .3rem 0

.fil-toolbar-menu-recipients
    position absolute
    right    1rem
    top      .6rem