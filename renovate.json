{
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(fix)"
  ],
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "excludePackagePrefixes": [
        "cozy-"
      ],
      "extends": [
        "schedule:monthly"
      ],
      "rangeStrategy": "pin"
    },
    {
      "matchPackageNames": [
        "cozy-client",
        "cozy-stack-client",
        "cozy-pouch-link"
      ],
      "groupName": "Cozy Client",
      "rangeStrategy": "bump"
    },
    {
      "matchPackagePrefixes": [
        "cozy-"
      ],
      "rangeStrategy": "bump"
    }
  ],
  "timezone": "Europe/Paris",
  "addLabels": [
    "dependencies"
  ],
  "prHourlyLimit": 1,
  "updateNotScheduled": false
}
