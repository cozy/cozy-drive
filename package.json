    "justified-layout": "2.1.1",
    "kd-tree-javascript": "1.0.3",
    "localforage": "1.7.2",
    "lodash": "4.17.10",
    "mime-types": "2.1.19",
    "node-polyglot": "2.3.0",
    "node-uuid": "1.4.8",
    "piwik-react-router": "0.8.2",
    "popper.js": "1.14.4",
    "pouchdb": "6.4.2",
    "pouchdb-find": "0.10.5",
    "preact": "8.3.0",
