    "cozy-ui": "7.5.0",
    "date-fns": "1.29.0",
    "diacritics": "1.3.0",
    "filesize": "3.5.11",
    "hammerjs": "2.0.8",
    "intersection-observer": "0.5.0",
    "justified-layout": "2.1.1",
    "localforage": "1.5.6",
    "node-polyglot": "2.2.2",
