{
  "name": "cozy-files",
  "version": "3.0.0",
  "main": "src/main.js",
  "scripts": {
    "build": "NODE_ENV=production webpack --config webpack.config.js",
    "clean": "rm -rf build",
    "copy:manifest": "install -m0644 package.json README.md LICENSE build",
    "deploy": "git-directory-deploy --username {github_username} --email {github_email} --directory public/ --branch build --repo=https://$GITHUB_TOKEN@github.com/cozy/cozy-files-v3.git",
    "tx": "tx pull --all || true",
    "postbuild": "npm run copy:manifest",
    "prebuild": "npm-run-all lint clean tx",
    "pretest": "npm run lint",
    "prewatch": "npm run clean",
    "lint": "standard 'src/**/*.js' 'test/**/*.js'",
    "test": "true",
    "watch": "NODE_ENV=development webpack-dev-server --config webpack.config.js --display-modules --display-chunks --inline --hot"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cozy/cozy-files-v3.git"
  },
  "author": "{github_username}",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/cozy/cozy-files-v3/issues"
  },
  "homepage": "https://github.com/cozy/cozy-files-v3#readme",
  "devDependencies": {
    "autoprefixer": "^6.5.0",
    "babel-core": "^6.0.0",
    "babel-loader": "^6.0.0",
    "babel-plugin-transform-runtime": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "babel-runtime": "^6.0.0",
    "chai": "^3.5.0",
    "copy-webpack-plugin": "^4.0.1",
    "cozy-ui": "^0.1.0",
    "css-loader": "^0.26.0",
    "css-mqpacker": "^5.0.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.24.0",
    "json-loader": "^0.5.0",
    "mocha": "^3.2.0",
    "mockery": "^2.0.0",
    "node-polyglot": "^2.2.0",
    "npm-run-all": "^3.1.0",
    "postcss": "^5.2.0",
    "postcss-loader": "^1.1.0",
    "pug": "^2.0.0-beta6",
    "pug-loader": "^2.3.0",
    "sinon": "^1.17.0",
    "standard": "^8.6.0",
    "style-loader": "^0.13.0",
    "stylus": "^0.54.0",
    "stylus-loader": "^2.4.0",
    "svg-sprite-loader": "^0.0.31",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.0",
    "webpack-merge": "^1.0.2"
  }
}
