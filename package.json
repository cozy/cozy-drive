    "cozy-bar": "6.8.7",
    "cozy-client": "5.7.3",
    "cozy-client-js": "0.13.0",
    "cozy-device-helper": "1.5.0",
    "cozy-flags": "^1.5.1",
    "cozy-konnector-libs": "4.11.4",
    "cozy-realtime": "1.1.0",
