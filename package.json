    "git-directory-deploy": "1.5.1",
    "html-webpack-plugin": "2.30.1",
    "husky": "0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "imports-loader": "0.7.1",
    "jest": "21.2.1",
    "json-loader": "0.5.7",
    "lint-staged": "6.1.0",
